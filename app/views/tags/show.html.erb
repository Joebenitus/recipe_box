<h1><%= @tag.name %></h1>

<% if @tag.recipes.any? %>
  <h4>Here are the recipes for this tag:</h4>

  <% @tag.recipes.each do |recipe| %>
    <ul>
      <li>
        <%= link_to recipe.name, recipe_path(recipe) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>No recipes are listed for this tag.</p>
<% end %>

<hr>

<p><%= link_to "Edit tag", edit_tag_path(@tag) %></p>
<p><%= link_to "Delete tag", tag_path(@tag),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></p>

<p><%= link_to "Recipes Home", recipes_path %></p>